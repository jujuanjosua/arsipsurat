            <!-- Section Contact
================================================== -->
            <section id="contact">
              <div class="container">
                <div class="row">
                  <div class="col-md-8 col-md-offset-2 text-center">
                    <h2 class="section-heading">
                      LOG <b>IN</b>
                    </h2>
                    <hr class="primary">
                      <p>
                        Please log in using your NIP and Password
                      </p>
                      <div class="regularform">
                        <div class="done">
                          <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            Login success... Thank you!
                          </div>
                        </div>
                        
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Your Email', class: 'col-md-12 field' %>

                          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'col-md-12 field' %>

                          <% if devise_mapping.rememberable? -%>
								<div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                          <% end -%>


                            <%= f.submit "Log In", class: 'contact submit btn btn-primary btn-xl actions' %>

                          <% end %>
                            

                          <%= render "devise/shared/links" %>
                        
                      </div>

                    </div>
                </div>
              </div>
            </section>

