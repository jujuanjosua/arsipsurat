<h1 class="title is-2 has-text-grey">Editing dispo</h1>

<%= simple_form_for([@surat, @dispo]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :dispo, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

<%= f.button :submit, 'Update dispo', class:'button is-info' %>
<% end %>