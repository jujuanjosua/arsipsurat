<!-- main col -->
<section id="contact">
<div class="container">
  <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">
            <h2 class="section-heading">DE<b>TAILS</b> </h2>
            <hr class="primary">
            <br>
            <br>
        </div>
    </div>


   <div class="panel panel-default">
     <div class="panel-heading"> <h4><%= @surat.tanggal_diterima %> <%= @surat.bulan_diterima %> <%= @surat.tahun_diterima %></h4></div>
      <div class="panel-body">
        
        <div class="panel-thumbnail"><%= image_tag @surat.image.thumb.url, class: "img-responsive" %></div>
        <br>
        <div class="clearfix"></div>
        
    </div>
    
    <div class="container">
    <h2>More Info</h2>
           
    <table class="table">
      <tbody>
      <tr>
        <td>Tanggal Diterima</td>
        <td><%= @surat.tanggal_diterima %></td>
      </tr>
      <tr>
        <td>Bulan Diterima</td>
        <td><%= @surat.bulan_diterima %></td>
      </tr>
      <tr>
        <td>Tahun Diterima</td>
        <td><%= @surat.tahun_diterima %></td>
      </tr>
      <tr>
        <td>Tanggal Dibuat</td>
        <td><%= @surat.tanggal_dibuat %></td>
      </tr>
      <tr>
        <td>Bulan Dibuat</td>
        <td><%= @surat.bulan_dibuat %></td>
      </tr>
      <tr>
        <td>Tahun Dibuat</td>
        <td><%= @surat.tahun_dibuat %></td>
      </tr>
      <tr>
        <td>Jenis Surat</td>
        <td><%= @surat.jenis_surat %></td>
      </tr>
      <tr>
        <td>Nomor surat</td>
        <td><%= @surat.nomor_surat %></td>
      </tr>
      <tr>
        <td>Asal Surat</td>
        <td><%= @surat.asal_surat %></td>
      </tr>
      <tr>
        <td>Perihal Surat</td>
        <td><%= @surat.perihal_surat %></td>
      </tr>
      <tr>
        <td>Bidang</td>
        <td><%= @surat.bidang %></td>
      </tr>
      </tbody>
    </table>
    </div>

    <div class="container">
    <div id="surat-dispos">
      <h3>Disposisi :</h3>
      
      <br>
      
      <%= render @surat.dispos %></div>

      <div>
      
      <% if user_signed_in ="first@admin.com" %>
         <%= render 'dispos/form' %>
      <% else %>
      <p>
        To make a dispo you need to login as <%= link_to 'pimpinan', new_user_session_path %>. 
      </p>
      <% end %>  
      </div>
      <br>
        <%= link_to 'Edit', edit_surat_path(@surat), class: "contact submit btn btn-primary btn-xl" %>
